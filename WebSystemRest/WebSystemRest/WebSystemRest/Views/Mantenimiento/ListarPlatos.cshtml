@model IEnumerable<WebSystemRest.Entidades.tb_PlatoxTipo>

@{
    ViewBag.Title = "ListarPlatos";
    Layout = "~/Views/Shared/_LayoutPlatos.cshtml";
}

<h2>ListarPlatos</h2>

<p>
    @Html.ActionLink("Agregar Plato", "RegistrarPlatos")
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Descripcion
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nom_plato)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.desc_tipo)
        </td>
    </tr>
}

</table>
