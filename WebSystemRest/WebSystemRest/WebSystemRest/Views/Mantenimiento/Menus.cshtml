@model IEnumerable<WebSystemRest.Models.tb_menu>

@{
    ViewBag.Title = "Menus";
    Layout = "~/Views/Shared/_LayoutMenus.cshtml";
}

<h2>Menus</h2>

<p>
    @Html.ActionLink("Agregar", "RegistrarMenu")
</p>
<table class="table" style="margin-left:20%">
    <tr>
        <th>
            Cantidad
        </th>
        <th>
            Fecha
        </th>
        <th>
            Tiempo Total
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cant_menu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fec_menu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tiempoTotal_menu)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_menu }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_menu }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_menu })
        </td>
    </tr>
}

</table>
